{
  "name": "voca-voca",
  "version": "0.1.0",
  "main": "electron/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start && node scripts/prepare-standalone.js",
    "lint": "next lint",
    "electron": "npx electron ."
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "mongodb": "^6.13.0",
    "mongoose": "^8.10.0",
    "next": "15.1.6",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.yourname.vocabwidget",
    "productName": "VocaVoca",
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
